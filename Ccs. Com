<body>
  <div class="container">
    <h2>Aplikasi Tabungan Barang</h2>
    <div class="saldo" id="saldo">Saldo: Rp 0</div>

    <select id="aksi">
      <option value="setor">Menabung</option>
      <option value="tarik">Tarik Uang</option>
    </select>

    <input type="text" id="barang" placeholder="Nama Barang / Keperluan">
    <input type="number" id="jumlah" placeholder="Masukkan jumlah (Rp)">
    <button onclick="prosesTabungan()">Simpan Transaksi</button>

    <div class="riwayat">
      <h3>Riwayat Transaksi</h3>
      <ul id="riwayatList"></ul>
      <button class="hapusData" onclick="hapusSemua()">ðŸ—‘ Hapus Semua Data</button>
    </div>
  </div>

  <script>
    let saldo = 0;
    let riwayat = [];

    // === MUAT DATA SAAT AWAL ===
    window.onload = function() {
      const dataSaldo = localStorage.getItem('saldo');
      const dataRiwayat = localStorage.getItem('riwayat');
      if (dataSaldo) saldo = parseFloat(dataSaldo);
      if (dataRiwayat) riwayat = JSON.parse(dataRiwayat);
      updateSaldo();
      tampilkanRiwayat();
    };

    function formatRupiah(angka) {
      return angka.toLocaleString('id-ID');
    }

    function simpanData() {
      localStorage.setItem('saldo', saldo);
      localStorage.setItem('riwayat', JSON.stringify(riwayat));
    }

    function prosesTabungan() {
      const aksi = document.getElementById('aksi').value;
      const barang = document.getElementById('barang').value.trim();
      const jumlah = parseFloat(document.getElementById('jumlah').value);
      const waktu = new Date().toLocaleString('id-ID');

      if (barang === "" || isNaN(jumlah) || jumlah <= 0) {
        alert("Isi nama barang dan jumlah dengan benar!");
        return;
      }

      let keterangan = "";

      if (aksi === "setor") {
        saldo += jumlah;
        keterangan = `[${waktu}] Menabung Rp ${formatRupiah(jumlah)} untuk ${barang}`;
      } else if (aksi === "tarik") {
        if (jumlah > saldo) {
          alert("Saldo tidak cukup!");
          return;
        }
        saldo -= jumlah;
        keterangan = `[${waktu}] Tarik Rp ${formatRupiah(jumlah)} untuk ${barang}`;
      }

      riwayat.unshift(keterangan);
      updateSaldo();
      tampilkanRiwayat();
      simpanData();

      document.getElementById('barang').value = "";
      document.getElementById('jumlah').value = "";
    }

    function updateSaldo() {
      document.getElementById('saldo').innerText = "Saldo: Rp " + formatRupiah(saldo);
    }

    function tampilkanRiwayat() {
      const list = document.getElementById('riwayatList');
      list.innerHTML = "";
      riwayat.forEach(item => {
        const li = document.createElement('li');
        li.textContent = item;
        list.appendChild(li);
      });
    }

    function hapusSemua() {
      if (confirm("Yakin ingin menghapus semua data tabungan?")) {
        saldo = 0;
        riwayat = [];
        localStorage.clear();
        updateSaldo();
        tampilkanRiwayat();
      }
    }
  </script>
</body>
